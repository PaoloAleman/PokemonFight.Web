@using PokemonFight.Data.EF;
@model List<Pokemon>;

<form action="/pokemon/elegirPokemon" method="post" class="flex items-center justify-center mt-2">
    <div class="grid grid-cols-2 grid-rows-2 gap-6">
        @foreach(var pokemon in Model){
            <button type="button" name="pokemonElegido" value="@pokemon.Nombre" class="border border-black w-[50%] mx-auto">
                <div class="border-b border-black flex items-center justify-center bg-[#fee581] bg-opacity-80 h-[70%]">
                    <img src="@pokemon.Imagen" class="w-[70%]"/>
                </div>
                <div class="bg-[#ffd538] bg-opacity-80 h-[30%] flex items-center justify-center">
                    <p class="text-2xl">@pokemon.Nombre</p>
                </div>
            </button>
        }
    </div>
</form>
